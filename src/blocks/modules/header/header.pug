include ../button/button 

- var socialArr = ["../../../img/header/social/vk.svg", "../../../img/header/social/yt.svg", "../../../img/header/social/fb.svg", "../../../img/header/social/inst.svg"];
- var selectArr = [{title: "Салон 1", link: "/"}, {title: "Салон 2", link: "/"}, {title: "Салон 3", link: "/"}, {title: "Салон 4", link: "/"}, {title: "Салон 5", link: "/"}];

header.header.container
    .header__left
        .logo
            a.logo__link(href="/")
                img(src="../../../img/header/medi.svg", alt="")
        .header__number
            a(href="tel:+71234567890") +7 (123) 456 78 90
        .header__select
            .select Наши салоны
                .select__list   
                    each val in selectArr
                        .select__item   
                            a.select__link(href=val.link) #{val.title}
    .header__right
        include ../../components/social/social